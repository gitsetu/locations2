{{> menu}}

<form class="box"  action="/place/{{collection._id}}/updateplace/{{place._id}}" method="POST">
  <label>Update Place Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" name="title", value="{{place.title}}">
      </div>
      <div class="field">
        <input class="input" type="text" name="category" value="{{place.category}}">
      </div>
      <div class="field">
        <input class="input" type="text"  name="latitude" value="{{place.latitude}}">
      </div>
    </div>
  </div>
  <button class="button is-primary">Update Place</button>
</form>

