<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Place</th>
      <th>Category</th>
      <th>Duration</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each collection.places}}
      <tr>
        <td>
          {{title}}
        </td>
        <td>
          {{category}}
        </td>
        <td>
          {{duration}}
        </td>
        <td>
          <a href="/place/{{../collection._id}}/editplace/{{_id}}" class="ui icon button">
            <i class="fas fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/collection/{{../collection._id}}/deleteplace/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
